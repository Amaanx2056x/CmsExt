<!DOCTYPE html>
<html>
{{>links}}
<link rel="stylesheet" href="/css/inputStyle.css">

<body>
  <div id="wrap">
    {{>header}}
    {{>msgs}}
    {{#each errors}}
    <div class="alert alert-danger">
      {{message}}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {{/each}}
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-md-7 col-lg-5 mx-auto">
          <div class="card card-signin  my-5">
            <div class="card-img-left d-none d-md-flex">
              <!-- Background image for card set in CSS! -->
            </div>

            <div class="card-body">
              <h5 class="card-title text-center">Register</h5>
              <form class="form-signin" action="/register" method='post'>

                <div class="form-label-group">
                  <input type="text" autocomplete="off" id="inputUserame" class="form-control" placeholder="Username" value="{{username}}" name="username" required autofocus>
                  <label for="inputUserame">Username</label>

                </div>

                <div class="form-label-group">
                  <input type="email" autocomplete="off" id="inputEmail" class="form-control" placeholder="Email address" value="{{email}}" name="email" required>
                  <label for="inputEmail">Email address</label>
                </div>

                <hr>


                <div class="form-label-group">
                  <input type="password" id="inputPassword" class="form-control" toshow='on' placeholder="Password" name="password" required>
                  <label for="inputPassword">Password</label>
                </div>

                <div class="form-label-group">
                  <input type="password" id="inputConfirmPassword" class="form-control" toshow='on' placeholder="Password" name="cpassword" required>
                  <label for="inputConfirmPassword">Confirm password</label>
                </div>
                <small id="hint" class="text-muted">
                  Atleast 8 characters: 1 Capital , 1 small and 1 number
                </small>

                <div class="custom-control custom-switch mb-3">
                  <input type="checkbox" class="custom-control-input" picker="trigger" id="customSwitch1">
                  <label class="custom-control-label" for="customSwitch1">Show Password</label>
                </div>


                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Register</button>
                <a class="d-block text-center mt-2 small" href="./login">Sign In</a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{>footer}}
</body>
</html>