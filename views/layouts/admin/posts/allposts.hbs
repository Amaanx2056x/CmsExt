<html>
{{>links}}
<link rel="stylesheet" href="/css/faicons.css">


<body>
  <div id="wrap">
    {{>admin}}
    {{>msgs}}
    <h1 id="headings">ALL POSTS</h1>
    {{#if posts}}
    <div style="overflow-x: auto; background: white; opacity: 0.95;">
      <table class='table table-bordered'>
        <thead>
          <tr>
            <th></th>
            <th>File</th>
            <th>Owner</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>Date</th>
            <th>Comments</td>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each posts}}
          <tr>
            <td>{{counter @index}}</td>
            <td>
              {{#if file}}
              <img height="50" width="60" class="img-responsive" src="{{file}}" alt="">
              {{else}}
              <img height="50" width="60" class="img-responsive" src="/src/noImage.png" alt="Image Not Available">
              {{/if}}
            </td>
            <td>{{user.username}}</td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td>{{dateFormat date 'MMMM Do YYYY'}}</td>
            <td><a href="/admin/posts/postComment/{{id}}" id="comment" class="fa fa-comments"></a></td>
            <td><a class="fa fa-eye" id="view" href='/post/{{id}}'></a></td>
            <td> <a class="fa fa-pencil-square" id="edit" href='/admin/posts/update/{{id}}'></a></td>
            <td>
              <form action='/admin/posts/{{id}}?_method=DELETE' method='post'>
                <button type="submit" id="delete"><i class="fa fa-trash"></i></button>
              </form>
            </td>


          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{else}}
    <div>
      <h5 id="headings">{{message}}</h5>
      {{>noData}}
    </div>
    {{/if}}


  </div>
  {{>footer}}
</body>
</html>