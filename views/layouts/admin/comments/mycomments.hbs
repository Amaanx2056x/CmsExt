<html>
{{>links}}
<link rel="stylesheet" href="/css/faicons.css">

<body>
  <div id="wrap">
    {{>header}}
    {{>msgs}}
    <h1 id="headings">
      {{pageTitle}}</h1>
    {{#if comments}}
    <div style="overflow-x: auto; background: white; opacity: 0.95;">

      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">OWNER</th>
            <th scope="col">COMMENT</th>
            <th scope="col">DATE</th>
            <th scope="col">DELETE</th>
          </tr>
        </thead>
        <tbody>
          {{#each comments}}
          <tr>
            <td>{{counter @index}}</td>
            <td>{{user.username}}</td>
            <td>
              <div style="height: auto;
                overflow-y: auto;
                width: auto;">
                {{body}}
              </div>
            </td>
            <td>{{dateFormat date 'MMMM Do YYYY'}}</td>
            <td> <form action='/admin/comments/{{id}}?_method=DELETE' method='post'>
              <button type='submit' id="delete"><i class="fa fa-trash"></i></button>
            </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>




    {{else}}
    <div>
      <h5 id="headings">{{message}}</h5>
      {{>noData}}
    </div>
    {{/if}}


  </div>
  {{>footer}}
</body>
</html>