{{>links}}
<link rel="stylesheet" href="/css/inputStyle.css">
<section style="width: 100%; height: 100%;">
  {{>adminheader}}
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Update Category</h5>
            <form class="form-signin" action="/admin/categories/update/{{category.id}}?_method=PUT" method="post">
              <div class="form-label-group">
                <input type="text" name="name" id="inputCat" class="form-control" autocomplete="off" value="{{category.name}}" placeholder="Category Name" required>
                <label for="inputCat">Category Name</label>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Update Category</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{>scripts}}
  {{>footer}}
</section>