{{>links}}
<link rel="stylesheet" href="/css/inputStyle.css">
<section style="width: 100%; height: 100%;
  background-image: url('/src/bg1.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;">
  {{>admin}}
  {{>msgs}}

  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <h1>Approval Pending</h1>
        {{#if categories}}
        <div style="background: white; opacity: 0.95;">
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>NAME</th>
                <th>ACCEPT</th>
                <th>REJECT</th>
              </tr>
            </thead>
            <tbody>
              {{#each categories}}
              <tr>
                <td>{{counter @index}}</td>
                <td>{{name}}</td>
                <td> <form action='/admin/categories/accept/{{id}}?_method=PUT' method="post">
                  <button type='submit' class='btn btn-success'>ACCEPT</button>
                </form>
                </td>
                <td>
                  <form action='/admin/categories/{{id}}?_method=DELETE' method='post'>
                    <button type='submit' class='btn btn-danger'>DELETE</button>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        {{else}}
        <div>
          <h5>{{message}}</h5>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
  {{>scripts}}
  {{>footer}}
</section>