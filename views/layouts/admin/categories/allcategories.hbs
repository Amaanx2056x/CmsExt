{{>links}}
<link rel="stylesheet" href="/css/inputStyle.css">
<section style="width: 100%; height: 100%;">
  {{>adminheader}}
  {{>msgs}}

  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Create Category</h5>
            <form class="form-signin" action='/admin/categories/create' method='post'>
              <div class="form-label-group">
                <input type="text" name="name" id="inputCat" class="form-control" autocomplete="off" placeholder="Category Name" required>
                <label for="inputCat">Category Name</label>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Create Category</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <br>
    <hr>
    <center>
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <h1>Categories</h1>
          {{#if categories}}
          <table class="table ">
            <thead>
              <tr>
                <th></th>
                <th>NAME</th>
                <th>EDIT</th>
                <th>DELETE</th>
              </tr>
            </thead>
            <tbody>
              {{#each categories}}
              <tr>
                <td>{{counter @index}}</td>
                <td>{{name}}</td>
                <td> <a href='/admin/categories/update/{{id}}' class='btn btn-info'>EDIT</a></td>
                <td>
                  <form action='/admin/categories/{{id}}?_method=DELETE' method='post'>
                    <button type='submit' class='btn btn-danger'>DELETE</button>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          {{else}}
          <div>
            <h5>{{message}}</h5>
          </div>
          {{/if}}
        </div>
      </div>
    </center>
  </div>

  {{>scripts}}
  {{>footer}}
</section>