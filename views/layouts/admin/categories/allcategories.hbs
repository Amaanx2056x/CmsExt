<html>
{{>links}}
<link rel="stylesheet" href="/css/inputStyle.css">
<link rel="stylesheet" href="/css/faicons.css">
<body>
  <div id="wrap">
    {{>admin}}
    {{>msgs}}
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card card-signin my-5">
            <div class="card-body">
              <h5 class="card-title text-center">Create Category</h5>
              <form class="form-signin" action='/admin/categories/create' method='post'>
                <div class="form-label-group">
                  <input type="text" name="name" id="inputCat" class="form-control" autocomplete="off" placeholder="Category Name" required>
                  <label for="inputCat">Category Name</label>
                </div>
                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Create Category</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <br>
      <hr>
      <center>
        <div class="row">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <h1 id="headings">Categories</h1>
            {{#if categories}}
            <div style="background: white; opacity: 0.95;">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th></th>
                    <th>NAME</th>
                    <th>EDIT</th>
                    <th>DELETE</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each categories}}
                  <tr>
                    <td>{{counter @index}}</td>
                    <td>{{name}}</td>
                    <td> <a href='/admin/categories/update/{{id}}' id="edit" class='fa fa-pencil-square'></a></td>
                    <td>
                        <button data-toggle="modal" data-target="#exampleModal" id="delete" onclick="deleteCategory('{{id}}')"><i class="fa fa-trash"></i></button>
                              
                    </td>
                  </tr>
                          

                  {{/each}}
                </tbody>
              </table>
            </div>
            {{else}}
            <div>
              <h5 id="headings">{{message}}</h5>
              {{>noData}}
            </div>
            {{/if}}
          </div>
        </div>
      </center>

    </div>
  </div>
  {{>modal}}
  {{>footer}}
</body>
</html>