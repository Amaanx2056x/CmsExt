<html>
{{>links}}
{{>admin}}
<h1 align="center">All Users</h1>
<body>
  <section style="width: 100%; height: 100%;">

    {{>msgs}}
    {{#if users}}


    <div style="overflow-x: auto;">


      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">NAME</th>
            <th scope="col">EMAIL</th>
            <th scope="col">VERIFIED</th>



          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>{{counter @index}}</td>
            <td>{{username}}</td>
            <td>

              {{email}}

            </td>
            <td>{{isVerified}}</td>


            <td>

              {{#if isAdmin}}

              <form action='/admin/demote/{{id}}?_method=PUT' method='post'>
                <button type='submit' class='btn btn-danger'>DEMOTE USER</button>
              </form>

              {{else}}


              <form action='/admin/promote/{{id}}?_method=PUT' method='post'>
                <button type='submit' class='btn btn-success'>MAKE ADMIN</button>
              </form>
              {{/if}}
            </td>


            <td> <form action='/admin/profile/{{id}}?_method=DELETE' method='post'>
              <button type='submit' class='btn btn-danger'>REMOVE USER</button>
            </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>




    {{else}}
    <div>
      <h5 align="center">{{message}}</h5>
    </div>
    {{/if}}
    {{>footer}}
    {{>scripts}}
  </section>
</body>
</html>